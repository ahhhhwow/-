<view class='result'>
  <view class='result-info'>
    <text >√您已经成功领取！</text>
  </view>
  <view class="b-item" >
    <text class='b-title'>{{title}}</text>
    <image class='b-logo' src='{{logo}}'></image>
      <view class='b-desc'>
        <text class='b-anthor'>作者：{{author}}\n</text>
        <text class='b-publisher'>出版社：{{publisher}}\n</text>
        <text class='b-isbn'>ISBN：{{isbn}}\n</text>
    </view>
  </view>
  <view class='send-m'> 
    <text class='ques'>对赠书的师兄/师姐的感谢已经成功传达啦~\n</text>
    <image src='/image/thanks.jpg'></image>
    <view class='thanks-y' bindtap='thanks'><text>继续领书</text></view>
    <view class='thanks-n' bindtap='reject'><text>返回主页</text></view>
  </view>
</view>
