/* pages/scan-result/scan-result.wxss */
page{
  background:  #f3f3f3;
}
.result-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.result-info text{
  margin-top: 50rpx;
  font-size: 38rpx;
  color: #32CD32;
  margin-bottom: 50rpx;
}
.b-item{
  margin-top: 10rpx; 
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 30rpx;
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  background: #FFFFFF; 
}
.b-logo{
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx; 
  float:left;
  width: 190rpx;
  height: 190rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}
.b-title{
  color: #212121;
  font-size: 34rpx;
  line-height: 1;
  margin-left: 30rpx;
}
.b-desc{
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #9a9a9a;
  line-height: 1.5;
  margin-left: 230rpx;
}
.send-m{ 
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  background: #FFFFFF; 
}
.send-m text{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.send-m image{
  width: 600rpx;
  height: 400rpx;
}
.thanks-y{
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #d0d0d0;  
  border-radius: 20rpx; 
  width: 400rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  background: #32CD32;
}
.thanks-y text{
  color: white; 
  align-items: center;
}
.thanks-n{
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #d0d0d0;  
  border-radius: 20rpx;  
  width: 400rpx;
  margin-bottom: 20rpx;
  background:#D1D1D1 ;
}
.thanks-n text{
  color: white; 
  align-items: center;
}